<content class="d-flex justify-content-center align-items-center position-relative" style="background-color: #b2e6b2; height: 100vh;">

    <div class="container text-dark p-4 d-flex flex-column justify-content-between align-items-start mx-4 rounded shadow-lg"
        style="min-height: 450px; max-width: 480px; background-color: rgba(255, 255, 255, 0.462)">
        <div class="d-flex flex-column align-items-center w-100 justify-content-between mb-4">
            <img src="/img/logo-bibliorinda.png" style="height: 200px;" alt="logo-bibliorinda"> <p style="font-family: Poppins;" class="fw-bold fs-4">LOGIN:</p>
        </div>

        <div class="w-100 d-flex flex-column gap-3 mb-3">
                <input required autocomplete="off" id="email" name="email"
                    class="form-control form-control-lg input-login" type="email"
                    placeholder="Insira seu e-mail"></input>

                <input required id="password" name="password" class="form-control form-control-lg input-login"
                    type="password" placeholder="Insira sua senha">

            <button type="button" id="btn-login"
                class="btn-login d-flex align-items-center justify-content-center btn-lg btn fw-bold btn-outline-primary width"><img src="/img/login-icon.svg" alt="icone-de-acessar"
                    class="me-2" height="20px">Acessar</button>
        </div>
    </div>

    <div class="alert position-absolute d-flex align-items-center fade" style="top: 15px; right: 15px;">
        <p class="text-alert mb-0"></p>
    </div>
</content>