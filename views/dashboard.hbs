<div class="p-5" style="min-height: 350px;">
    <p class="h3 mb-3">Olá, {{name}}! Boas vindas ao <span class="h1 fw-bold fs-3 mb-0 text-dark" style="letter-spacing: 10px;">BIBLIORINDA</span></p>
    <div class="d-flex gap-3 mb-5">
        <button class="btn btn-primary" data-bs-target="#modal-add" data-bs-toggle="modal" id="btn-add-book"><i class="fa-solid fa-book-medical me-2"></i> Adicionar
            novo
            livro</button>

        <button class="btn btn-secondary" data-bs-target="#modal-remove" data-bs-toggle="modal"
            id="btn-remove-book"><i class="fa-solid fa-trash me-2"></i> Remover livro</button>

        <button class="btn btn-info" type="button" id="btn-reload-list"><i class="fa-solid fa-rotate-right me-2"></i> Atualizar livros</button>

        <button class="btn btn-warning" type="button" id="btn-truncate-list"><i class="fas fa-exclamation-circle me-2"></i> Truncar</button>

        <button style="min-width: 125px;" class="ms-auto btn btn-danger" onclick="logout()">
            <i class="fa-solid fa-power-off me-2"></i> Deslogar
        </button>
    </div>

    <label class="form-label fs-5" for="input-search">Pesquise por nome, prateleira, ator ou categoria:</label>
    <input autofocus autocomplete="off" type="text" class="form-control form-control-lg mb-4" placeholder="..."
        id="input-search">

    <table class="table table-dark table-hover table-striped" id="table-search">
        <thead>
            <tr>
                <td>Id</td>
                <td>Prateleira</td>
                <td>Nome</td>
                <td>Categoria</td>
                <td>Ator</td>
            </tr>
        </thead>

        <tbody id="list-books"></tbody>
    </table>

    <div id="warn-search" style="display: none;"></div>

    <!-- Modal de adicionar livro -->
    <div class="modal fade" tabindex="-1" id="modal-add">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header flex-column">
                    <p class="h2">Adicionar um livro..</p>
                    <p class="h5">Preencha os campos com *</p>
                </div>

                <div class="modal-body d-flex gap-2 flex-column">
                    <input id="input-shelf" class="form-control" type="text"
                        placeholder="* Insira a prateleira do livro">
                    <input id="input-name" class="form-control" type="text"
                        placeholder="* Insira o nome do livro">
                    <input id="input-category" class="form-control" type="text"
                        placeholder="* Insira a categoria do livro">
                    <input id="input-author" class="form-control" type="text"
                        placeholder="* Insira o nome do autor">
                </div>

                <div class="modal-footer">
                    <button id="btn-save-book" type="button" class="btn btn-primary"><i class="fa-solid fa-book-medical me-2"></i> Adicionar livro</button>
                    <button class="btn btn-danger" data-bs-dismiss="modal"><i class="fa-solid fa-xmark me-2"></i> Fechar</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de remover livro -->
    <div class="modal modal-lg fade" tabindex="-1" id="modal-remove">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header d-flex flex-column">
                    <p class="h2">Remover um livro..</p>
                    <p class="h5">Pesquise abaixo</p>
                </div>

                <div class="modal-body">
                    <label class="form-label" for="input-remove">Pesquise por nome, prateleira, ator ou
                        categoria:</label>
                    <input class="form-control" id="input-remove" type="text" placeholder="...">

                    <table class="mt-4 table table-dark table-striped"
                        style="overflow-y: auto; max-height: 300px; display: inline-block; width: 100%">
                        <thead>
                            <tr>
                                <td>Id</td>
                                <td>Prateleira</td>
                                <td class="w-50">Nome</td>
                                <td class="w-25">Categoria</td>
                                <td class="w-25">Ator</td>
                                <td></td>
                            </tr>
                        </thead>

                        <tbody id="list-remove"></tbody>
                    </table>

                    <div id="warn-remove" style="display: none;">
                        <p class="mb-0 fw-bold fs-4 text-dark">
                            <i class="fa-solid fa-magnifying-glass-plus"></i> Não achei livros com essas
                            características.
                        </p>
                    </div>
                </div>

                <div class="modal-footer">
                    <button id="btn-trash-books" class="btn btn-success"><i class="fa-solid fa-floppy-disk me-2"></i> Salvar</button>
                    <button class="btn btn-danger" data-bs-dismiss="modal"><i class="fa-solid fa-xmark me-2"></i> Fechar</button>
                </div>
            </div>
        </div>
    </div>

    <div class="alert position-absolute d-flex align-items-center fade" style="top: 15px; right: 15px;">
        <p class="text-alert mb-0"></p>
    </div>


    {{!-- Funções da API Bibliorinda --}}
    <script src="/js/func/api/getAllBooks.js"></script>

    {{!-- Funções do sistema Bibliorinda --}}
    <script src="/js/func/loadList.js"></script>
    <script src="/js/func/reloadList.js"></script>
    <script src="/js/func/searchList.js"></script>
    <script src="/js/func/logout.js"></script>
</div>